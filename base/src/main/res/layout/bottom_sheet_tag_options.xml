<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:ui="http://schemas.android.com/apk/res-auto"
  android:id="@+id/root_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:id="@+id/options_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/BottomSheetCardContainer">

    <androidx.cardview.widget.CardView
      android:id="@+id/tag_card_layout"
      style="@style/BottomSheetCardView"
      ui:cardCornerRadius="@dimen/spacing_xxsmall">

      <LinearLayout
        android:id="@+id/options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal">

      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      style="@style/BottomSheetCardView"
      ui:cardBackgroundColor="@color/material_red_800">

      <com.github.bijoysingh.uibasics.views.UITextView
        android:id="@+id/new_tag_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal"
        ui:icon="@drawable/ic_add_white_24dp"
        ui:iconSize="@dimen/icon_size_normal"
        ui:iconTextGap="@dimen/spacing_normal"
        ui:iconTint="@color/light_tertiary_text"
        ui:text="@string/tag_sheet_new_tag_button"
        ui:textColor="@color/light_tertiary_text"
        ui:textSize="@dimen/font_size_normal" />

    </androidx.cardview.widget.CardView>
  </LinearLayout>
</androidx.core.widget.NestedScrollView>