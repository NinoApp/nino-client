<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/root_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/BottomSheetCardContainer">

    <android.support.v7.widget.CardView
      android:id="@+id/content_card"
      style="@style/BottomSheetCardView"
      app:cardBackgroundColor="@color/material_blue_grey_700">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <TextView
          android:id="@+id/options_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/spacing_small"
          android:text="@string/available_in_pro_only"
          android:textColor="@color/light_primary_text"
          android:textSize="@dimen/font_size_large" />

        <TextView
          android:id="@+id/why_install_pro"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/spacing_small"
          android:text="@string/why_install_pro"
          android:textColor="@color/light_secondary_text"
          android:textSize="@dimen/font_size_normal" />

        <TextView
          android:id="@+id/why_install_pro_details"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/spacing_xsmall"
          android:text="@string/why_install_pro_details"
          android:textColor="@color/light_tertiary_text"
          android:textSize="@dimen/font_size_normal" />
      </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      style="@style/BottomSheetCardView"
      app:cardBackgroundColor="@color/material_red_800">

      <TextView
        android:id="@+id/install_pro_app"
        style="@style/BorderedBackgroundView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/spacing_normal"
        android:text="@string/install_pro_app"
        android:textAllCaps="true"
        android:textColor="@color/light_secondary_text"
        android:textSize="@dimen/font_size_small"
        android:textStyle="bold" />

    </android.support.v7.widget.CardView>
  </LinearLayout>
</android.support.v4.widget.NestedScrollView>